{
  "name": "rumpus",
  "version": "0.1.0",
  "description": "Rumpus application for Minecraft server",
  "repository": {
    "type": "git",
    "url": "git@github.com:chuckthemole/rumpus.git"
  },
  "keywords": [
    "rest",
    "hateoas",
    "spring",
    "data",
    "react"
  ],
  "author": "Charles Thomas",
  "license": "Apache-2.0",
  "bugs": {
