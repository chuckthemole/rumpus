  },
  "homepage": "https://charles-pikaart-thomas.com",
  "dependencies": {
    "bulma": "^0.9.4",
    "node-sass": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rest": "^1.3.1"
  },
  "scripts": {
    "build-webpack": "webpack --config config/dev/webpack.config.js",
    "watch": "webpack --watch -d --output ./target/classes/static/built/app.bundle.js",
    "build": "echo Building frontend",
    "check": "echo Checking frontend && npm run lint && npm run test",
    "clean": "echo Cleaning frontend",
    "lint": "echo Linting frontend",
    "test": "echo Testing frontend",
    "bulma-build": "node-sass --omit-source-map-url ./src/main/resources/static/sass/rumpus-styles.scss ./src/main/resources/static/css/rumpus-styles.css",
    "bulma-build-watch": "npm run css-build -- --watch",
    "bulma-watch": "npm run css-watch"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.2",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0"
  }
